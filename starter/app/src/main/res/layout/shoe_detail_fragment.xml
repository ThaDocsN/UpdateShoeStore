<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_green_dark"
        android:orientation="vertical"
        tools:context=".ShoeDetailFragment">

        <!-- TODO: Update blank fragment layout -->
        <TextView
            android:id="@+id/tv_shoe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/shoe_name" />

        <EditText
            android:id="@+id/et_shoe_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/shoe_name"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/tv_shoe_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/shoe_size" />

        <EditText
            android:id="@+id/et_shoe_size"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="@string/shoe_size"
            android:inputType="number"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/tv_shoe_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/shoe_company" />

        <EditText
            android:id="@+id/et_shoe_company"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/shoe_company"
            android:importantForAutofill="no" />

        <TextView
            android:id="@+id/tv_shoe_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/shoe_description" />

        <EditText
            android:id="@+id/et_shoe_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="textPersonName"
            android:hint="@string/shoe_description"
            android:importantForAutofill="no" />

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel" />

        <Button
            android:id="@+id/btn_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save" />

    </LinearLayout>
</layout>
